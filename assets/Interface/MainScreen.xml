<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty.xsd http://nifty-gui.sourceforge.net/nifty.xsd">

  <screen id="main_screen" controller="pylos.view.MainScreenController">
    <layer id="layer" childLayout="vertical">
      <panel id="fill" height="*" />
      <panel id="panel" height="24px" align="center" valign="bottom" backgroundColor="#ff000077" childLayout="horizontal">
        <label id="status" text="Status Text" width="200px" color="#ffff" font="aurulent-sans-17.fnt" align="left" valign="center" />
        <label width="*" />
        <label id="fps" text="FPS: " width="80px" color="#ffff" font="aurulent-sans-17.fnt" align="right" valign="center" />
      </panel>
    </layer>
  </screen>
</nifty>